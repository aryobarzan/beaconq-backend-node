          }
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "externalVideoLinks": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "question",
        "difficulty",
        "taxonomy",
        "time",
        "version"
      ],
      "additionalProperties": false
    },
    "ChoiceActivityAnswer": {
      "type": "object",
