{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "topic.json",
  "definitions": {
    "Topic": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "beaconResources": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/BeaconResource"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "version"
      ],
      "additionalProperties": false
    }
  }
}