{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "courseAnnouncement.json",
  "definitions": {
    "CourseAnnouncement": {
      "type": "object",
      "properties": {
        "course": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "dateTime": {
          "type": "string",
          "format": "date-time"
        },
        "courseSessions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "version": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "course",
        "author",
        "title",
        "message",
        "version"
      ],
      "additionalProperties": false
    }
  }
}