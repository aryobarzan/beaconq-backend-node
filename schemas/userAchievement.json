{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "userAchievement.json",
  "definitions": {
    "UserAchievement": {
      "type": "object",
      "properties": {
        "achievement": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "criteriaProgress": {
          "type": "object",
          "properties": {
            "size": {
              "type": "number"
            }
          },
          "required": [
            "size"
          ],
          "additionalProperties": false
        },
        "unlockedAt": {
          "type": "string",
          "format": "date-time"
        },
        "requiresUpload": {
          "type": "boolean"
        }
      },
      "required": [
        "achievement",
        "user",
        "criteriaProgress"
      ],
      "additionalProperties": false
    }
  }
}