{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "course.json",
  "definitions": {
    "Course": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "isManualTopicFocus": {
          "type": "boolean"
        },
        "registrationLimit": {
          "type": "number"
        },
        "accessKey": {
          "type": "string"
        },
        "trialQuiz": {
          "$ref": "#/definitions/Types.ObjectId"
        },
        "restrictSubmissionInitially": {
          "type": "boolean"
        },
        "integrations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sessions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CourseSession"
          }
        },
        "beaconResources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/BeaconResource"
          }
        },
        "version": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "description",
        "isManualTopicFocus",
        "accessKey",
        "restrictSubmissionInitially",
        "sessions",
        "beaconResources",
        "version"
      ],
      "additionalProperties": false
    },
    "CourseMethods": {
      "type": "object",
      "additionalProperties": false
    }
  }
}