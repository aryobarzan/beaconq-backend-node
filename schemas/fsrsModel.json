{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "fsrsModel.json",
  "definitions": {
    "FSRSCard": {
      "type": "object",
      "properties": {
        "due": {
          "type": "string",
          "format": "date-time"
        },
        "stability": {
          "type": "number"
        },
        "difficulty": {
          "type": "number"
        },
        "elapsedDays": {
          "type": "number"
        },
        "scheduledDays": {
          "type": "number"
        },
        "repetitions": {
          "type": "number"
        },
        "lapses": {
          "type": "number"
        },
        "status": {
          "type": "string"
        },
        "lastReview": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "due",
        "stability",
        "difficulty",
        "elapsedDays",
        "scheduledDays",
        "repetitions",
        "lapses",
        "status"
      ],
      "additionalProperties": false
    },
    "FSRSReviewLog": {
      "type": "object",
      "properties": {
        "rating": {
          "type": "string"
        },
        "elapsedDays": {
          "type": "number"
        },
        "scheduledDays": {
          "type": "number"
        },
        "review": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string"
        }
      },
      "required": [
        "rating",
        "elapsedDays",
        "scheduledDays",
        "review",
        "status"
      ],
      "additionalProperties": false
    },
    "FSRS": {
      "type": "object",
      "properties": {
        "card": {
          "$ref": "#/components/schemas/FSRSCard"
        },
        "reviewLog": {
          "$ref": "#/components/schemas/FSRSReviewLog"
        },
        "dataType": {
          "type": "string",
          "enum": [
            "activity",
            "topic"
          ]
        },
        "dataId": {
          "type": "string"
        },
        "user": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "card",
        "reviewLog",
        "dataType",
        "dataId",
        "user",
        "version"
      ],
      "additionalProperties": false
    }
  }
}